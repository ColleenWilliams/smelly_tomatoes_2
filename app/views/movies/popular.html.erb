<ul id="movies">
  <%if @movies.empty? %>
  <h2> No matchin movie! </h2>
  <%else%>
  <% @movies.each do |movie| %>
    <li>
      <article class="movie">
        <header>
          <%= image_for(movie) %>
          <h2><%= link_to movie.title, movie %> (<%= movie.released_on.year %>)</h2>
          <h3><%= movie.cast %></h3>
        </header>
        <p>
          <%= truncate(movie.description, length: 150, separator: ' ') %>
        </p>
        <table>
          <tr>
            <th>Rating</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Duration</th>
            <td><%= movie.duration %></td>
          </tr>
          <tr>
            <th>Total Gross</th>
            <td><%= format_total_gross(movie) %></td>
          </tr>
        </table>
        <%= link_to "Write a Review", new_movie_review_path(movie), class: 'button ok review'%>
        <footer>
        </footer>
      </article>
    </li>
  <% end %>
  <%end%>
</ul>
